package de.dragtech.dragtech.guis;

public class MainGuiHandler implements IGuiHandler {
	
	
	@Override
	public Object getServerGuiElement(int guiId, EntityPlayer player, World world, int x, int y, int z) {
		if (guiId == Main.guiBlockPlacer) {
			return new ContainerRandomPlacer(player, player.inventory, new InventoryRandomPlacer(player.getHeldItem()));
		}
		return null;
	}

	@Override
	public Object getClientGuiElement(int guiId, EntityPlayer player, World world, int x, int y, int z) {
		if (guiId == Main.guiBlockPlacer) {
			return new GuiRandomPlacer((ContainerRandomPlacer) new ContainerRandomPlacer(player, player.inventory, new InventoryRandomPlacer(player.getHeldItem())));
		}
		return null;
	}
}
